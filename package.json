{
  "name": "tweakpane",
  "version": "1.0.0",
  "description": "A compact pane for fine-tuning parameters and monitoring value changes",
  "author": "cocopon",
  "license": "MIT",
  "homepage": "https://cocopon.github.com/tweakpane/",
  "main": "dist/tweakpane.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cocopon/tweakpane.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s main:build:* doc:build",
    "clean": "rm -rf dist docs tweakpane-*.tgz tweakpane-*.zip",
    "dev": "npm-run-all main:build:dev doc:build --parallel main:watch doc:watch doc:server",
    "prepare": "run-s clean main:prepare",
    "prepublishOnly": "npm test",
    "test": "run-s main:flow main:lint main:test",
    "doc:build": "run-p doc:build:*",
    "doc:build:css": "mkdir -p docs/assets && node-sass src/doc/sass/bundle.scss | postcss --config postcss.config.js > docs/assets/bundle.css",
    "doc:build:html": "node project/render-html-templates.js",
    "doc:build:js": "webpack --config webpack-doc.config.js",
    "doc:server": "http-server ./docs",
    "doc:watch": "run-p doc:watch:*",
    "doc:watch:css": "onchange 'src/doc/sass/**/*.scss' -- npm run doc:build:css",
    "doc:watch:html": "onchange 'src/doc/template/**/*.html' -- npm run doc:build:html",
    "doc:watch:js": "webpack --config webpack-doc.config.js --watch",
    "main:build:dev": "webpack --mode development",
    "main:build:prod": "webpack --mode production",
    "main:flow": "flow --show-all-errors",
    "main:lint": "eslint 'src/main/js/**/*'",
    "main:prepare": "npm-run-all --parallel main:build:* --serial main:release:dist",
    "main:release": "npm-run-all clean --parallel main:build:* --serial main:release:dist main:release:version main:release:zip",
    "main:release:dist": "mkdir -p dist && cp docs/assets/tweakpane*.js dist",
    "main:release:version": "node project/add-version-postfix.js",
    "main:release:zip": "zip -j -r tweakpane-$(cat package.json | npx json version).zip dist",
    "main:test": "nyc mocha --require @babel/register 'src/main/js/**/*-test.js'",
    "main:test:coverage": "nyc report --reporter=html --reporter=text --reporter=lcovonly --report-dir=test/coverage",
    "main:test:report": "nyc mocha --require @babel/register --reporter mocha-junit-reporter --reporter-options mochaFile=./test/results/results.xml 'src/main/js/**/*-test.js'",
    "main:watch": "webpack --mode development --watch"
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "autoprefixer": "^9.1.5",
    "babel-loader": "^8.0.4",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^1.0.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.3",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "nunjucks": "^3.1.3",
    "postcss-cli": "^6.0.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "webpack": "^4.23.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "eslint": "^5.7.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "flow-bin": "^0.85.0",
    "http-server": "^0.11.1",
    "jsdom": "^12.2.0",
    "json": "^9.0.6",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^13.1.0",
    "onchange": "^5.0.2",
    "webpack-cli": "^3.1.2"
  }
}
